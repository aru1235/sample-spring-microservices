pipeline {
   
    agent any

    stages {

        stage('Clone repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }

        stage('branch show') { 
            steps { 
                sh 'ls -la'
                sh 'printenv'
                sh 'echo "the branch name is ${GIT_BRANCH}"'
                sh 'echo "${GIT_BRANCH}" | cut -d'/' -f2'
             
                
            }
        }

    }
}
