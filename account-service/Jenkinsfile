pipeline {
   
    agent any

    stages {

        stage('Clone repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }
        stage('Build Jar') {
            steps {
                sh 'pwd'
                sh 'ls -la'
                sh 'mvn clean package'
                
            }

        }
       stage('Docker Image Build') {
            steps {
                sh 'ls -la'
                sh 'docker build -t off-ecr .'
            }
        }
    }
}
