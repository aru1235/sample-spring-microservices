 pipeline {
    agent any

    environment {
        ECR_REGISTRY = "398443246513.dkr.ecr.us-east-1.amazonaws.com"
        ECR_REPOSITORY = "ci-ecr"
        DOCKER_IMAGE_TAG = "feature"
    }


  
    stages {

        stage('Clone repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }
        stage('default env var') { 
            steps { 
                sh 'printenv'
                sh 'echo "--------------------"'
            }
        }

        
        stage('change directory') {
            steps {
              dir('account-service') {
                  sh'ls -la'
                  
              }
            }
        }
        stage ('Build') {
            steps {

                sh 'pwd'
                sh 'ls -la'
                sh 'mvn clean install'

            }
        }
        
        

        
        stage('Build Docker image') {
            steps {
              dir('account-service') {
                sh 'docker build -t account-service .'
                sh 'docker images'
                sh 'echo "tagging the docker image from latest to feature"'
                sh 'docker tag account-service:latest 398443246513.dkr.ecr.us-east-1.amazonaws.com/account-service:feature'
                sh 'echo "printing next command"'
                sh 'docker images'
                }
      }
    }

        stage('Login to ECR') {
            steps {
                withCredentials([awsEcr(credentialsId: 'aws-credential', region: 'us-east-1')]) {
                    sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin $ECR_REGISTRY'
        }
      }
    }

        stage('Push Docker image to ECR') {
            steps {
                sh 'docker push $ECR_REGISTRY/$ECR_REPOSITORY:$DOCKER_IMAGE_TAG'
      }
    }
    }
}
