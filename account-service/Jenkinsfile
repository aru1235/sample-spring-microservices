pipeline {
   
    agent any

    stages {

        stage('Clone repository') { 
            steps { 
                script{
                checkout scm
                }
            }
        }
        stage('Build Jar') {
            steps {
                sh 'pwd'
                sh 'ls -la'
                dir('account-service'){
                sh 'mvn clean package'
                }
            }

        }
        stage('Docker Image Build') {
            steps {
                dir('account-service'){
                sh 'docker build -t off-ecr .'
                }
            }
        }

        stage('Push Docker Image to ECR') {
            steps {
                withAWS(credentials: 'aws-credentials', region: 'ap-south-1') {
                    sh 'aws ecr get-login-password --region ap-south-1 | docker login --username AWS --password-stdin 398443246513.dkr.ecr.ap-south-1.amazonaws.com'
                    sh 'docker tag off-ecr:latest 398443246513.dkr.ecr.ap-south-1.amazonaws.com/off-ecr:feature1'
                    sh 'docker push 398443246513.dkr.ecr.ap-south-1.amazonaws.com/off-ecr:feature1'
                }
            }
        }

    }

}
